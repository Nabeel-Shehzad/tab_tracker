{
  "manifest_version": 3,
  "name": "Employee Website Tracker",
  "version": "1.0.0",
  "description": "Track employee website visits and generate reports",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Website Tracker"
  }
}